FROM python:3.11-slim

WORKDIR /app

# 시스템 패키지 설치 (최소)
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    libffi-dev \
    libssl-dev \
    && rm -rf /var/lib/apt/lists/*

# Python 의존성 설치 (경량화)
COPY requirements.light.txt .
RUN pip install --no-cache-dir -r requirements.light.txt

# 애플리케이션 코드 복사
COPY . .

# 포트 노출
EXPOSE 8001

# 실행 명령
CMD ["python", "simple_server.py"]
